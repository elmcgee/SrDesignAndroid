<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textview_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/app_name"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_enableBT"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_title"
        android:text="ENABLE BT"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_alreadyPairedBT"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_enableBT"
        android:text="SHOW PAIRED BT DEVICES"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_scanBT"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_alreadyPairedBT"
        android:text="SCAN FOR BT DEVICES"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_touchScreen"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_scanBT"
        android:background="#0080ff"
        android:onClick="onButtonTouchClick"
        android:text="Touch Screen"
        android:textColor="@android:color/background_light"
        android:textStyle="bold" />

</RelativeLayout>