<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/touchLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible">

    <ImageView
        android:id="@+id/orangeBack"
        android:layout_width="336dp"
        android:layout_height="441dp"
        android:layout_centerInParent="true"
        android:background="@android:color/holo_orange_light"
        app:srcCompat="@android:color/holo_orange_light" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:text="@string/map"
        android:textSize="20dp"
        android:gravity="center_horizontal"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/blue_square"
        android:layout_width="97dp"
        android:layout_height="87dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="53dp"
        android:layout_marginTop="68dp"
        android:background="@android:color/holo_blue_bright"
        android:layout_marginLeft="53dp"
        android:layout_alignParentLeft="true" />

    <ImageView
        android:id="@+id/green_square"
        android:layout_width="97dp"
        android:layout_height="87dp"
        android:layout_alignStart="@+id/orange_square"
        android:layout_alignTop="@+id/blue_square"
        android:background="@android:color/holo_green_light"
        android:layout_alignLeft="@+id/orange_square" />

    <ImageView
        android:id="@+id/red_square"
        android:layout_width="97dp"
        android:layout_height="87dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/blue_square"
        android:layout_marginBottom="74dp"
        android:background="@android:color/holo_red_dark"
        app:srcCompat="@android:color/holo_red_dark"
        android:layout_alignLeft="@+id/blue_square" />

    <ImageView
        android:id="@+id/orange_square"
        android:layout_width="97dp"
        android:layout_height="87dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/red_square"
        android:layout_marginEnd="55dp"
        android:background="@android:color/holo_orange_dark"
        app:srcCompat="@android:color/holo_orange_dark"
        android:layout_alignParentRight="true"
        android:layout_marginRight="55dp" />

   <!-- <Button
        android:id="@+id/alter_map_btn"
        android:layout_width="156dp"
        android:layout_height="37dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#0080ff"
        android:text="@string/edit_map"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:onClick="onEditMapClick"/>
-->
    <Button
        android:id="@+id/qr_activity_btn"
        android:layout_width="156dp"
        android:layout_height="37dp"
        android:layout_alignEnd="@+id/green_square"
        android:layout_alignParentTop="true"
        android:background="#0080ff"
        android:onClick="onQRClick"
        android:text="Go to QR CODE ACTIVITY"
        android:textColor="@android:color/background_light"
        android:textStyle="bold" />

</RelativeLayout>
