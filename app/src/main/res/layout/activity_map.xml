<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/touchLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible">

    <ImageView
        android:id="@+id/floor"
        android:layout_width="351dp"
        android:layout_height="481dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="34dp"
        android:background="@android:color/darker_gray"
        app:srcCompat="@android:color/darker_gray" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:text="@string/map"
        android:textSize="30sp"
        android:gravity="center_horizontal"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/blue_square"
        android:layout_width="97dp"
        android:layout_height="87dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="118dp"
        android:background="@android:color/holo_blue_bright"
        android:layout_marginLeft="70dp"
        android:layout_alignParentLeft="true" />

    <ImageView
        android:id="@+id/green_square"
        android:layout_width="97dp"
        android:layout_height="87dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="200dp"
        android:layout_marginEnd="49dp"
        android:background="@android:color/holo_green_light"
        android:layout_marginRight="49dp"
        android:layout_alignParentRight="true" />

    <ImageView
        android:id="@+id/person_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@drawable/ic_person_outline_black_24dp"
        app:srcCompat="@drawable/ic_person_outline_black_24dp"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/exhibit_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="91dp"
        android:layout_marginTop="169dp"
        android:text="Exhibit 1"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:layout_marginLeft="91dp"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/exhibit_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="215dp"
        android:layout_marginEnd="71dp"
        android:text="Exhibit 2"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:layout_marginRight="71dp"
        android:layout_alignParentRight="true" />


    <!-- <Button
        android:id="@+id/alter_map_btn"
        android:layout_width="156dp"
        android:layout_height="37dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#0080ff"
        android:text="@string/edit_map"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:onClick="onEditMapClick"/>
-->
</RelativeLayout>
