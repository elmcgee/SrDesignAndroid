<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/touchLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible">

    <ImageView
        android:id="@+id/floor"
        android:layout_width="468dp"
        android:layout_height="664dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="41dp"
        android:layout_marginTop="94dp"
        android:background="@android:color/darker_gray"
        android:layout_alignParentRight="true"
        android:layout_marginRight="41dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:text="@string/map"
        android:textSize="30sp"
        android:gravity="center_horizontal"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/blue_square"
        android:layout_width="97dp"
        android:layout_height="87dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="98dp"
        android:layout_marginTop="152dp"
        android:background="@android:color/holo_blue_bright"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="98dp" />

    <ImageView
        android:id="@+id/green_square"
        android:layout_width="97dp"
        android:layout_height="87dp"
        android:layout_marginEnd="78dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="377dp"
        android:background="@android:color/holo_green_light"
        android:layout_alignParentRight="true"
        android:layout_marginRight="78dp" />

    <TextView
        android:id="@+id/exhibit_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/blue_square"
        android:layout_alignParentStart="true"
        android:layout_marginStart="120dp"
        android:text="Exhibit 1"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="120dp" />

    <TextView
        android:id="@+id/exhibit_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/green_square"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="99dp"
        android:text="Exhibit 2"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_marginRight="99dp" />


    <TextView
        android:id="@+id/name_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="143dp"
        android:text=" "
        android:layout_alignRight="@+id/textView" />



    <ImageView
        android:id="@+id/person_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_person_outline_black_24dp"
        app:srcCompat="@drawable/ic_person_outline_black_24dp"
        tools:ignore="VectorDrawableCompat" />
    <!-- <Button
        android:id="@+id/alter_map_btn"
        android:layout_width="156dp"
        android:layout_height="37dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#0080ff"
        android:text="@string/edit_map"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:onClick="onEditMapClick"/>
-->
</RelativeLayout>
<!-- Commented button allowed user to switch from map activity to alter map activity -->